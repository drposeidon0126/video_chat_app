{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@peek/core/model": ["packs/core/model/src/index.ts"],
      "@peek/shared/assets": ["packs/shared/assets/src/index.ts"],
      "@peek/core/usecase": ["packs/core/usecase/src/index.ts"],
      "@peek/core/adapter": ["packs/core/adapter/src/index.ts"],
      "@peek/util/test": ["packs/util/test/src/index.ts"],
      "@peek/shared/elements": ["packs/shared/elements/src/index.ts"],
      "@peek/shared/data-access": ["packs/shared/data-access/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
